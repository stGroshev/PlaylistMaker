<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonMainActivity" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="BackgroundColorMainActivity">
        <item name="android:background">@color/blue</item>
    </style>
    <style name="BackgroundColor">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextViewSettingsActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_layout_settings</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">3</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>
    
    <style name="SizeViewSettingsActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="IconSettingsActivity" parent="SizeViewSettingsActivity">
        <item name="android:tint">@color/gray</item>
    </style>

    <style name="Toolbar" parent="SizeViewSettingsActivity">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="ListLinearLayoutSettingsActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingTop">21dp</item>
        <item name="android:paddingBottom">21dp</item>
    </style>

    <style name="SearchPanel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@drawable/search</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingTop">8.5dp</item>
        <item name="android:paddingBottom">8.5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ResetInput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/cross</item>
        <item name="android:visibility">gone</item>
        <item name="android:tint">@color/gray</item>
        <item name="android:paddingEnd">4dp</item>
    </style>
</resources>