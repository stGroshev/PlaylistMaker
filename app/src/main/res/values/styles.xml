<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonMainActivity" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="BackgroundColor">
        <item name="android:background">@color/background_dark_mode</item>
    </style>
    <style name="BackgroundColorMainActivity">
        <item name="android:background">@color/background_dark_mode</item>
    </style>

    <style name="TextViewSettingsActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_layout_settings</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">3</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SizeViewSettingsActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="IconSettingsActivity" parent="SizeViewSettingsActivity">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Toolbar" parent="SizeViewSettingsActivity">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ListLinearLayoutSettingsActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingTop">21dp</item>
        <item name="android:paddingBottom">21dp</item>
    </style>

    <style name="SearchPanel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/edit_text_radius</item>
        <item name="android:drawableLeft">@drawable/search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">textNoSuggestions|textVisiblePassword</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingTop">8.5dp</item>
        <item name="android:paddingBottom">8.5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>
    <style name="ResetInput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/cross</item>
       <!-- <item name="android:visibility">gone</item>-->
        <item name="android:tint">@color/black</item>
        <item name="android:paddingEnd">4dp</item>
    </style>

    <style name="TrackName">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TrackAttributes">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="iconColor">
        <item name="tint">@color/white</item>
    </style>

    <style name="placeholder_not_found">
        <item name="android:layout_marginTop">102dp</item>
        <item name="android:src">@drawable/placeholder_not_found_dark</item>
    </style>

    <style name="placeholder_not_internet">
        <item name="android:layout_marginTop">102dp</item>
        <item name="android:src">@drawable/placeholder_not_internet_dark</item>
    </style>

    <style name="placeholder_text">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="Button_update">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:text">@string/update</item>
        <item name="android:textColor">@color/background_dark_mode</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>