<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/BackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            style="@style/Toolbar"
            android:foreground="?attr/selectableItemBackground"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/arrow" />

        <TextView
            style="@style/TextViewSettingsActivity"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:text="@string/settings"
            android:textFontWeight="500"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/listLinearLayoutSettingsActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp">

        <LinearLayout
            style="@style/ListLinearLayoutSettingsActivity">

            <TextView
                style="@style/TextViewSettingsActivity"
                android:text="@string/dark_theme" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shareLinearLayout"
            style="@style/ListLinearLayoutSettingsActivity"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                style="@style/TextViewSettingsActivity"
                android:text="@string/share_app" />

            <ImageView
                style="@style/IconSettingsActivity"
                android:src="@drawable/share" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/supportLinearLayout"
            style="@style/ListLinearLayoutSettingsActivity"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                style="@style/TextViewSettingsActivity"
                android:text="@string/write_to_support" />

            <ImageView
                style="@style/IconSettingsActivity"
                android:src="@drawable/support" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userAgreementLinearLayout"
            style="@style/ListLinearLayoutSettingsActivity"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                style="@style/TextViewSettingsActivity"
                android:text="@string/user_agreement" />

            <ImageView
                style="@style/IconSettingsActivity"
                android:src="@drawable/arrow_right" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

